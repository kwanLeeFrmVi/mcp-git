{
  "name": "mcp-git",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "version": "0.0.1",
  "scripts": {
    "build": "tsc && shx chmod +x dist/*.js",
    "build:bun": "bun build ./index.ts --outdir ./dist --format esm --target bun --minify && shx chmod +x dist/*.js",
    "start": "bun run dist/index.js",
    "prepare": "npm run build",
    "watch": "tsc --watch"
  },
  "devDependencies": {
    "shx": "^0.4.0",
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.8.0"
  }
}
